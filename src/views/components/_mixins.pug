mixin breadcrumbs(paddingLeft=false,item1="", item2="", item3="", item4="", item5="")
	nav.breadcrumbs-wrap
	ul(class="breadcrumbs" + (paddingLeft==true?"":" breadcrumbs--pl0"))
		if(item1=="")
			li.breadcrumbs-item
				a.breadcrumbs-item-a(href="") Раздел

			li.breadcrumbs-item Раздел
		else
			li.breadcrumbs-item
				a.breadcrumbs-item-a(href="")
					=item1
			if(item2!="")
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="")
						=item2
			if(item3!="")
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="")
						=item3
			if(item4!="")
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="")
						=item4
			if(item5!="")
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="")
						=item5

mixin scheduleItem($time="", $text="", $linkText="", $href="/")
	.schedule-item-wrap 
		.schedule-item-time
			=$time
		.schedule-item-text 
			=$text
		if($linkText!="")
			a.schedule-item-link(href=$href)
				=$linkText
mixin infoItem($title="", $text="", $span="", $border="", $href="/")
	if($border=="")
		.info-item-wrap.info-item-wrap--gradient
			.info-item-title
				=$title
			.info-item-text
				=$text
			a.info-item-link(href=$href)
				img(src="images/arrow-red.svg", alt="-->")
	else
		.info-item-wrap.info-item-wrap--red
			.info-item-title.info-item-title--black
				=$title
			.info-item-text
				=$span
				p 
					=$text
			a.info-item-link(href=$href)
				img(src="images/arrow-red.svg", alt="-->")